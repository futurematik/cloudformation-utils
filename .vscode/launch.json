{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch cfn-asset",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/assets/cli/cfn-asset.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "args": ["rollup"],
      "cwd": "${workspaceFolder}/test/test-api"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch build",
      "runtimeArgs": ["-r", "esm"],
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/test/deploy-cra-test/lib/index.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "args": [
        "build",
        "--stack-version",
        "latest"
      ],
    }
    {
      "type": "node",
      "request": "launch",
      "name": "Launch upload",
      "runtimeArgs": ["-r", "esm"],
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/test/deploy-cra-test/lib/index.js",
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "args": [
        "build",
        "--bucket",
        "fmtktestdeploy",
        "--stack-version",
        "latest"
      ],
      "console": "integratedTerminal"
    }
  ]
}
